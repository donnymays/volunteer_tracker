<h1>Volunteer Tracker</h1>
<h2>Keep Track of Volunteers!</h2>
<hr>

<h3>Here is a list of Projects</h3>

<% if @projects.any? %>
  <ul>
  <% @projects.each do |project| %>
    <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
  <% end %>
  </ul>
<% else %>
  <p>there are currently no projects scheduled.</p>
<% end %>

<form action="/projects" method="post">
  <div class="form-group">
    <label for="title">Enter Project title</label>
    <input id="title" name="title" class="form-control" type="text" required>
  </div>
  <button type="submit" class="btn btn-dark">Create Project</button>
</form>
<hr>