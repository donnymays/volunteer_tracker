<h1>Update <%= @volunteer.name() %></h1>

<form action="/volunteers/<%=@volunteer.id %>" method="post">
<input name="_method" type="hidden" value="patch">
  <div class="form-group">    
    <label for="name">Edit Volunteer:</label>
    <input id="name" name="name" class="form-control" type="text" required>
  </div>
  <button type="submit" class="btn btn-primary">Update Volunteer</button> 
</form>  
  
<br><br>

<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete volunteer</button>
</form>

<a href="/volunteers" class="btn btn-info">Return to Volunteers</a> 